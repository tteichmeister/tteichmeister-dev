---
interface Props {
  text: string;
  url: string;
}

const { text, url } = Astro.props;
---

<a href={url} class="justify-center flex">
  <span
    class="text-xl dark:text-slate-200 hover:text-teal-700 hover:dark:text-teal-400"
    >{text}</span
  >
  <span class="my-auto ml-1"
    ><svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="w-4 h-4 stroke-700 dark:stroke-teal-500"
      ><line x1="5" x2="19" y1="12" y2="12"></line><polyline
        points="12 5 19 12 12 19"></polyline></svg
    ></span
  >
</a>
